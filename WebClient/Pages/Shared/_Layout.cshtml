<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Secular+One&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class= "nav">
            <a href="~/" class="imgLink"><img class="logo" src="~/images/Logo Small-01.png"></a>
            <a href="~/">Home</a>
            <div class="dropdown">
                <button class="dropbtn">Inventory 
                <i class="fa fa-caret-down"></i>
                </button>
                <div class="dropdown-content">
                <a href="~/Inventory">Products</a>
                <a href="~/Categories">Categories</a>
                </div>
            </div>
            <div class="dropdown">
                <button class="dropbtn">Sales 
                <i class="fa fa-caret-down"></i>
                </button>
                <div class="dropdown-content">
                <a href="~/Customers">Customers</a>
                <a href="~/Orders">Orders</a>
                </div>
            </div> 
            <div class="dropdown">
                <button class="dropbtn">Company 
                <i class="fa fa-caret-down"></i>
                </button>
                <div class="dropdown-content">
                <a href="~/Employees">Employees</a>
                <a href="~/Offices">Offices</a>
                </div>
            </div> 
    </div>

    <nav role="navigation">
        <div id="hambMenuToggle">
            
            <input type="checkbox" />

            <span></span>
            <span></span>
            <span></span>
            
            <ul id="hambMenu">
            <a href="~/"><li>Home</li></a>
            <a href="~/Inventory"><li>Products</li></a>
            <a href="~/Categories"><li>Categories</li></a>
            <a href="~/Customers"><li>Customers</li></a>
            <a href="~/Orders"><li>Orders</li></a>
            <a href="~/Employees"><li>Employees</li></a>
            <a href="~/Offices"><li>Offices</li></a>
            </ul>
        </div>
    </nav>
    
    <main>
        @RenderBody()   
    </main>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>